{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "inputs": ["**/*.ts", "**/*.tsx"],
      "outputs": []
    }
  }
}
